{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "singularName": "application",
    "pluralName": "applications",
    "displayName": "Application"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "candidate_profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::candidate-profile.candidate-profile",
      "inversedBy": "applications"
    },
    "job": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::job.job",
      "inversedBy": "applications"
    },
    "applicationStatus": {
      "type": "enumeration",
      "enum": [
        "submitted",
        "shortlisted",
        "rejected",
        "accepted"
      ]
    },
    "coverLetter": {
      "type": "blocks"
    },
    "resumeFile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "company_profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company-profile.company-profile",
      "inversedBy": "applications"
    }
  }
}
